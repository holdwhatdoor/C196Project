<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.c196project">

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory">
        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".AssessmentActivity"
            android:label="@string/title_activity_assessment"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".AssessmentView"
            android:label="@string/assess_view_title"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".AssessmentEdit"
            android:label="@string/assess_edit_title"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".CourseActivity"
            android:label="@string/course_activity_title"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".CourseView"
            android:label="@string/course_view_title"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".CourseEdit"
            android:label="@string/course_edit_title"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".TermActivity"
            android:label="@string/term_activity_title"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".TermView"
            android:label="@string/term_view_title"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".TermEdit"
            android:label="@string/edit_term"
            android:theme="@style/NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>