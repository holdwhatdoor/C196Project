<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_main"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/current_term"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="@string/listItem"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cur_term_start_lbl"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Start: "/>
        <TextView
            android:id="@+id/current_term_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cur_term_start_lbl"
            android:text="MM/DD/YYYY"/>

        <TextView
            android:id="@+id/cur_term_end_lbl"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cur_term_start_lbl"
            android:text="End: "/>
        <TextView
            android:id="@+id/cur_term_end_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_term_start"
            android:layout_toRightOf="@id/cur_term_end_lbl"
            android:text="MM/DD/YYYY"/>


    </RelativeLayout>

</RelativeLayout>