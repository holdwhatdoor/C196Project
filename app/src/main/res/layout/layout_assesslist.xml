<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assesslist_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/assess_item"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:contextClickable="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="@string/listItem"
            android:textSize="25sp" />


        <Button
            android:id="@+id/assess_edit_btn"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/assess_del_btn"
            android:text="Edit"/>

        <Button
            android:id="@+id/assess_del_btn"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Delete"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assess_item">

            <TextView
                android:id="@+id/due_lbl"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Due: "/>
            <TextView
                android:id="@+id/due_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/due_lbl"
                android:text="MM/DD/YYYY"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

